{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "definitions": {
    "Host": {
      "type": "string",
      "enum": [
        "AppVeyor",
        "AzurePipelines",
        "Bamboo",
        "Bitbucket",
        "Bitrise",
        "GitHubActions",
        "GitLab",
        "Jenkins",
        "Rider",
        "SpaceAutomation",
        "TeamCity",
        "Terminal",
        "TravisCI",
        "VisualStudio",
        "VSCode"
      ]
    },
    "ExecutableTarget": {
      "type": "string",
      "enum": [
        "AttestAdditionalTools",
        "AttestSnyk",
        "AttestSonarQube",
        "CheckInToGitHub",
        "CreateNuGetPackage",
        "CreateOctopusBuildInformation",
        "CSpellCheck",
        "CycloneDX",
        "GenerateVersion",
        "GitGuardianScan",
        "KosliBeginTrail",
        "NpmBuild",
        "NpmInstall",
        "OctopusDeploy",
        "PushBuildInformation",
        "PushToDTrack",
        "PushToProGet",
        "QodanaScan",
        "SnykScan",
        "SonarqubeScan",
        "UpdateChangelog",
        "UpdatePackageFiles"
      ]
    },
    "Verbosity": {
      "type": "string",
      "description": "",
      "enum": [
        "Verbose",
        "Normal",
        "Minimal",
        "Quiet"
      ]
    },
    "NukeBuild": {
      "properties": {
        "Continue": {
          "type": "boolean",
          "description": "Indicates to continue a previously failed build attempt"
        },
        "Help": {
          "type": "boolean",
          "description": "Shows the help text for this build assembly"
        },
        "Host": {
          "description": "Host for execution. Default is 'automatic'",
          "$ref": "#/definitions/Host"
        },
        "NoLogo": {
          "type": "boolean",
          "description": "Disables displaying the NUKE logo"
        },
        "Partition": {
          "type": "string",
          "description": "Partition to use on CI"
        },
        "Plan": {
          "type": "boolean",
          "description": "Shows the execution plan (HTML)"
        },
        "Profile": {
          "type": "array",
          "description": "Defines the profiles to load",
          "items": {
            "type": "string"
          }
        },
        "Root": {
          "type": "string",
          "description": "Root directory during build execution"
        },
        "Skip": {
          "type": "array",
          "description": "List of targets to be skipped. Empty list skips all dependencies",
          "items": {
            "$ref": "#/definitions/ExecutableTarget"
          }
        },
        "Target": {
          "type": "array",
          "description": "List of targets to be invoked. Default is '{default_target}'",
          "items": {
            "$ref": "#/definitions/ExecutableTarget"
          }
        },
        "Verbosity": {
          "description": "Logging verbosity during build execution. Default is 'Normal'",
          "$ref": "#/definitions/Verbosity"
        }
      }
    }
  },
  "allOf": [
    {
      "properties": {
        "Configuration": {
          "type": "string",
          "description": "Configuration to build - Default is 'Debug' (local) or 'Release' (server)",
          "enum": [
            "Debug",
            "Release"
          ]
        },
        "DependencyTrackApiKey": {
          "type": "string",
          "default": "Secrets must be entered via 'nuke :secrets [profile]'"
        },
        "DependencyTrackProject": {
          "type": "string",
          "description": "DependencyTrack Project Name"
        },
        "DependencyTrackUrl": {
          "type": "string",
          "description": "DependencyTrack URL"
        },
        "GitHubToken": {
          "type": "string",
          "default": "Secrets must be entered via 'nuke :secrets [profile]'"
        },
        "KOSLI_API_TOKEN": {
          "type": "string",
          "default": "Secrets must be entered via 'nuke :secrets [profile]'"
        },
        "OctopusApiKey": {
          "type": "string",
          "default": "Secrets must be entered via 'nuke :secrets [profile]'"
        },
        "OctopusEnvironment": {
          "type": "string",
          "description": "Octopus Environment"
        },
        "OctopusProjectName": {
          "type": "string",
          "description": "Octopus Project Name"
        },
        "OctopusSpace": {
          "type": "string",
          "description": "Octopus Project Name"
        },
        "OctopusUrl": {
          "type": "string",
          "description": "Octopus URL"
        },
        "ProGetApiKey": {
          "type": "string",
          "default": "Secrets must be entered via 'nuke :secrets [profile]'"
        },
        "ProGetFeedName": {
          "type": "string",
          "description": "ProGet Feed Name"
        },
        "ProGetUrl": {
          "type": "string",
          "description": "ProGet URL"
        },
        "ReleaseVersion": {
          "type": "string",
          "description": "Release Version"
        },
        "SnykToken": {
          "type": "string",
          "default": "Secrets must be entered via 'nuke :secrets [profile]'"
        },
        "SonarqubeToken": {
          "type": "string",
          "default": "Secrets must be entered via 'nuke :secrets [profile]'"
        }
      }
    },
    {
      "$ref": "#/definitions/NukeBuild"
    }
  ]
}
